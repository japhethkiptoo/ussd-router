{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "outDir": "lib",
        "rootDir": "./src",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*.ts"
    ]
}